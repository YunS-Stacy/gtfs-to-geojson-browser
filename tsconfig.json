{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "preserve",
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["es6", "dom", "webworker"],
    "outDir": "./lib",

    "moduleResolution": "node",
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/typings/*"]
    }
  },
  "exclude": ["node_modules", "dist", "lib"],
  "include": ["src", "webpack.config.js"]
}
